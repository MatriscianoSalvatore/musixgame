<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Musixmatch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/musixMatchPink</item>
        <item name="colorPrimaryVariant">@color/musixMatchPinkDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal</item>
        <item name="colorSecondaryVariant">@color/tealDark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Musixmatch.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Musixmatch.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Musixmatch.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.LaunchTheme" parent="Theme.Musixmatch">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <style name="Theme.MusixmatchPink" parent="Theme.Musixmatch">
        <item name="backgroundColor">@color/musixMatchPink</item>
        <item name="colorPrimary">@color/teal</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

</resources>